
import React, { PureComponent } from 'react';
import githubService from 'services/github';
import './styles.scssm';

class ExampleFetch extends PureComponent {
  state = {
    username: '',
    isLoading: false,
    repos: [],
  };

  onChange = (e) => {
    this.setState({
      username: e.target.value,
    });
  };

  fetchRepos = async (e) => {
    e.preventDefault();

    const {
      username,
    } = this.state;

    this.setState({
      isLoading: true,
    });

    const repos = await githubService.getReposByUsername(username);

    this.setState({
      isLoading: false,
      repos,
    });
  };

  render() {
    const {
      username,
      isLoading,
      repos,
    } = this.state;

    return (
      <div>
        <form onSubmit={this.fetchRepos}>
          <input
            type="text"
            value={username}
            placeholder="Enter a github username to fetch some repos!"
            onChange={this.onChange}
          />
          <button>
            Fetch
            <div styleName="overlay">
              <span styleName={`loading-gif ${isLoading ? 'is-active' : ''}`} />
            </div>
          </button>
        </form>
        <div>
          <ul>
            {repos.map(repo => (
              <li key={repo.id}>
                <div>
                  <span>URL:</span>
                  <p>{repo.url}</p>
                </div>
              </li>
            ))}
          </ul>
        </div>
      </div>
    );
  }
}

export default ExampleFetch;
